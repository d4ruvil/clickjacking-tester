{
    "manifest_version": 3,
    "name": "Clickjacking Extension",
    "version": "1.0",
    "description": "Test websites for clickjacking vulnerabilities at just one click",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
}